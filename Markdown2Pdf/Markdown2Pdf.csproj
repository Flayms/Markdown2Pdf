<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>netstandard2.0</TargetFramework>
		<LangVersion>default</LangVersion>
		<Nullable>enable</Nullable>
		<Version>0.3.2</Version>
		<Description>Library for converting Markdown to PDF.</Description>
		<PackageProjectUrl>https://github.com/Flayms/Markdown2Pdf</PackageProjectUrl>
		<PackageReadmeFile>README.md</PackageReadmeFile>
		<PackageTags>md;markdown;pdf;markdown2pdf;markdowntopdf;library</PackageTags>
		<GeneratePackageOnBuild>False</GeneratePackageOnBuild>
		<PackageId>Markdown2Pdf</PackageId>
		<PackageLicenseFile>LICENSE</PackageLicenseFile>
	</PropertyGroup>

	<PropertyGroup>
		<GenerateDocumentationFile>true</GenerateDocumentationFile>
	</PropertyGroup>

	<ItemGroup>
	  <None Remove="wwwroot\ContentTemplate_NoScripts.html" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="wwwroot\ContentTemplate_NoScripts.html" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="wwwroot\ContentTemplate.html">
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </EmbeddedResource>
	</ItemGroup>

	<ItemGroup>
		<None Include="..\LICENSE">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
		<None Include="..\README.md">
			<Pack>True</Pack>
			<PackagePath>\</PackagePath>
		</None>
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="Markdig" Version="0.31.0" />
		<PackageReference Include="PuppeteerSharp" Version="10.1.0" />
	</ItemGroup>

</Project>
